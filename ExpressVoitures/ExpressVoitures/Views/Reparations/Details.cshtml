@model ExpressVoitures.Models.Reparation

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Reparation</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicule)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vehicule.CodeVIN)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TypeReparation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeReparation.Nom)
        </dd>
        <dt class = "col-sm-2">
             Coût de réparation
        </dt>
        <dd class = "col-sm-10">
              @Model.Cout €
        </dd>
        <dt class = "col-sm-2">
            Date disponibilité à la vente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ReparationId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
