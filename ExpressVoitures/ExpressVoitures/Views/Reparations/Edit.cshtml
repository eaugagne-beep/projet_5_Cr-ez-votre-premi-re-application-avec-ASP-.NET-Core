@model ExpressVoitures.Models.Reparation

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reparation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReparationId" />
            <div class="form-group">
                <label asp-for="Vehicule" class="control-label"></label>
                <select asp-for="VehiculeId" class="form-control" asp-items="ViewBag.VehiculeId"></select>
                <span asp-validation-for="VehiculeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TypeReparation" class="control-label"></label>
                <select asp-for="TypeReparationId" class="form-control" asp-items="ViewBag.TypeReparationId"></select>
                <span asp-validation-for="TypeReparationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cout" class="control-label"></label>
                <input asp-for="Cout" class="form-control" type="number" step="0.01" />
                <span class="input-group-text">€</span>
                <span asp-validation-for="Cout" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
